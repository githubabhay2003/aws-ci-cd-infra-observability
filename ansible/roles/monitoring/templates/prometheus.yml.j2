global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - /etc/prometheus/rules/*.yml

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - 'localhost:9100'

  - job_name: 'jenkins'
    metrics_path: /prometheus
    static_configs:
      - targets:
          - 'localhost:8080'

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - 'localhost:9093'


